<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/colorLGold"
    android:orientation="vertical"
    tools:context=".Login">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5mm"
        android:gravity="center"
        android:text="ONE TIME LOGIN"
        android:textColor="#FF0000"
        android:textSize="26sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5mm"
        android:layout_marginRight="5mm"
        android:text="This is a one time login page.So please enter the datas correctly"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5mm"
        android:layout_marginTop="3mm"
        android:layout_marginRight="5mm"
        android:layout_marginBottom="2mm"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3mm"
            android:text="PERSON 1:"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tVp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter 1nd Person name"
            android:inputType="textPersonName"
            android:text=""
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5mm"
        android:layout_marginTop="1mm"
        android:layout_marginRight="5mm"
        android:layout_marginBottom="2mm"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3mm"
            android:text="PERSON 2:"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tVp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter 2nd Person name"
            android:inputType="textPersonName"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5mm"
        android:layout_marginTop="1mm"
        android:layout_marginRight="5mm"
        android:layout_marginBottom="2mm"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3mm"
            android:text="PERSON 3:"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tVp3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter 3nd Person name"
            android:inputType="textPersonName"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5mm"
        android:layout_marginTop="1mm"
        android:layout_marginRight="5mm"
        android:layout_marginBottom="4mm"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3mm"
            android:text="PERSON 4:"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tVp4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter 4nd Person name"
            android:inputType="textPersonName"
            android:text="" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/colorGold"
        android:gravity="center"
        android:text="LOGIN" />

</LinearLayout>